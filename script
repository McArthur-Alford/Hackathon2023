init:
    <TIME> ^std timekeeper
    <TIME> ^init true
    ->
    <a> ^state flip

flop:
    <a> ^state flip
    <IO> ^std IO
    ->
    <a> ^state flop

flip:
    <a> ^state flop
    <IO> ^std IO
    ->
    <a> ^state flip

read_reply:
    <IO> ^std IO
    <IO> ^read <a>
    ->
    <IO> ^print <a>

read_request:
    <IO> ^std IO
    ->
    <IO> ^doread true
