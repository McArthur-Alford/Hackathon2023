init_rule:
    <TIME> ^system 'timekeeper'
    <TIME> ^init True
    ->
    <box1> ^on <box2>
    <box1> ^id 'box1'
    <box2> ^left_of <box3>
    <box2> ^id 'box2'
    <box3> ^colour 'red'
    <box3> ^id 'box3'
    <box3> ^magical 'magical'
    <box4> ^* *
    <box4> ^id 'box4'

test_rule:
    <x> ^on <y>
    <y> ^left_of <z>
    <z> ^magical *
    <z> ^colour 'red'
    <IO> ^system 'IO'
    ->
    <z> ^colour 'blue'
    <IO> ^print 'The box has colour'
